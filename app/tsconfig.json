{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@logger/*": ["logger/*"]
    },
    "sourceMap": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
